{
  "name": "whotrades/phpmd-diff",
  "description": "Tool for creating PHPMD reports, cleared of violations unrelated to the modified lines",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Maksim Rodikov",
      "email": "maxrodikov@gmail.com"
    }
  ],
  "support": {
    "issues": "https://github.com/WhoTrades/phpmd-diff/issues"
  },
  "config": {
    "platform": {
      "php": "7.3.0"
    }
  },
  "bin": [
    "bin/phpmd-diff"
  ],
  "autoload": {
    "psr-4": {
      "Whotrades\\PHPMDDiff\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Whotrades\\PHPMDDiff\\Tests\\Unit\\": "tests/unit",
      "Whotrades\\PHPMDDiff\\Tests\\Resource\\": "tests/resources"
    }
  },
  "require": {
    "sebastian/diff": "~4.0",
    "sebastian/cli-parser": "~1.0",
    "ext-dom": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "~9.0",
    "mikey179/vfsstream": "~1.6",
    "squizlabs/php_codesniffer": "~3.5"
  }
}